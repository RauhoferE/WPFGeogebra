        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Gray" Offset="0" />
                <GradientStop Color="LightBlue" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <TabControl Name="Tab">
            <TabItem Margin="0" Width="Auto">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Pics/grid.png" Margin="5"/>
                    <TextBlock Text="Grid" Margin="15"/>
                </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Border BorderBrush="Black" BorderThickness="1" Width="600" Height="500" HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding Grid.XAxeGrid}" HorizontalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas  Width="600" Height="500" HorizontalAlignment="Left" ClipToBounds="True"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <ItemContainerTemplate>
                                    <Line X1="0" Y1="{Binding StartPoint.Y}"
                                      X2="600" Y2="{Binding StartPoint.Y}" Stroke="{Binding Color}" Opacity="{Binding Opacity}"
                                      StrokeThickness="1"/>
                                </ItemContainerTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                    <ItemsControl ItemsSource="{Binding Grid.YAxeGrid}" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas  Width="600" Height="500" HorizontalAlignment="Left" ClipToBounds="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                        <ItemContainerTemplate>
                            <Line X1="{Binding StartPoint.X}" Y1="0"
                                      X2="{Binding StartPoint.X}" Y2="500" Stroke="{Binding Color}" Opacity="{Binding Opacity}"
                                      StrokeThickness="1"/>
                        </ItemContainerTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl ItemsSource="{Binding Grid.YAXe}" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas  Width="600" Height="500" HorizontalAlignment="Left" ClipToBounds="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <ItemContainerTemplate>
                                <Line X1="{Binding StartPoint.X}" Y1="0"
                                      X2="{Binding StartPoint.X}" Y2="500" Stroke="{Binding Color}" Opacity="{Binding Opacity}"
                                      StrokeThickness="2"/>
                            </ItemContainerTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl ItemsSource="{Binding Grid.XAXe}" HorizontalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas  Width="600" Height="500" HorizontalAlignment="Left" ClipToBounds="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <ItemContainerTemplate>
                                <Line X1="0" Y1="{Binding StartPoint.Y}"
                                      X2="600" Y2="{Binding StartPoint.Y}" Stroke="{Binding Color}" Opacity="{Binding Opacity}"
                                      StrokeThickness="2"/>
                            </ItemContainerTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl ItemsSource="{Binding FunctionListVM.TrigFunctions}" HorizontalAlignment="Center">
