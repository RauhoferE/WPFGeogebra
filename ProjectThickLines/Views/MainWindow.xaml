                            <ItemsPanelTemplate>
                                <Canvas Width="600" Height="500" HorizontalAlignment="Left" ClipToBounds="True" >
                                </Canvas>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <ItemContainerTemplate>
                                <Polyline Points="{Binding Points}" Stroke="{Binding Brush}" Opacity="{Binding Opacity}" StrokeThickness="{Binding StrokeThickness}" />
                            </ItemContainerTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Canvas Background="Transparent" Width="600" Height="500" HorizontalAlignment="Center" ClipToBounds="True" MouseDown="Canvas_MouseDown" MouseMove="Canvas_MouseMove" MouseUp="Canvas_MouseUp">
                        <Rectangle StrokeThickness="1" Visibility="{Binding ZoomVM.ISVisible, Converter={StaticResource VisC}}" Stroke="LightBlue" Canvas.Left="{Binding ZoomVM.Left}" Canvas.Top="{Binding ZoomVM.Top}" Width="{Binding ZoomVM.Width}" Height="{Binding ZoomVM.Height}"></Rectangle>
