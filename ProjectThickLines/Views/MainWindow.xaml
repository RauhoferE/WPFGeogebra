                                <Polyline Points="{Binding Points}" Stroke="{Binding Brush}" Opacity="{Binding Opacity}" StrokeThickness="{Binding StrokeThickness}" />
                            </ItemContainerTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <ItemsControl ItemsSource="{Binding FunctionListVM.PolyFunctions}" HorizontalAlignment="Center">
